<h2 align="center"> Title: <%= @blog.title %></h2>
<div class ="well col-xs-8 col-xs-offset-2">
  <h4 class ="center description">
    <strong>Description:</strong>
  </h4>
  <hr>
    <%= simple_format(@blog.description) %>

  <div class = "blog-actions">
    <%= link_to "Edit this article", edit_blog_path(@blog), class: "btn btn-xs btn-primary" %>
    <%= link_to "Delete this article", blog_path(@blog), method: :delete,
                data: {confirm: "Are you sure you want to delete this article?"},
                class: "btn btn-xs btn-danger" %>
    <%= link_to "View all articles", blogs_path, class: "btn btn-xs btn-success" %>
  </div>
</div>
